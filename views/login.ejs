    <body>
      <div class="inner-section  jumbotron">
      <p class="cdlg"> <i class="fas fa-phone-alt"></i>   <b> Contact</b>DIARY </p>
        <div id="logintab">
          <p id="login-header">  Login  </p>

          <% if(validuser==="no"){%>
           <p style="color:red;">  Invalid username/password  </p>
          <%}%>

          <form action="/" method="post">

          <div class="form-group row">
             <label for="name" class="col-sm-2 col-form-label"><i class="fad fa-user"></i></label>
             <div class="col-sm-10">
               <input type="text" class="form-control create" name="username" placeholder="Please Enter Username" required>
             </div>
           </div>

           <div class="form-group row">
             <label for="name" class="col-sm-2 col-form-label"><i class="fad fa-lock"></i></label>
             <div class="col-sm-10">
               <input type="password" class="form-control create" name="password" placeholder="Please Enter Password" required>
             </div>
          </div>

          <br />
          <button class="btn btn-success btn-block" type="submit" name="button">Sign In</button>

        </form>

          <p>
            Don't have an account? <a href="signup">Sign up</a>
          </p>
      </div>
    </div>
   </body>


